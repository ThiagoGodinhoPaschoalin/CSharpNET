<Page
    x:Class="SayHello.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SayHello"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="SayHelloButton" Content="Say Hello" HorizontalAlignment="Center" Margin="0,663,0,0" VerticalAlignment="Top" Height="64" Width="224" Click="SayHelloButton_Click"/>
        <TextBox x:Name="textBox1" HorizontalAlignment="Center" Margin="0,341,0,0" Text="Hello !" VerticalAlignment="Top" RenderTransformOrigin="0.519,0.531" Width="360" Height="80" FontSize="36" TextAlignment="Center" BorderThickness="1,1,8,8"/>
    </Grid>
</Page>
