<Window x:Class="SayHello.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SayHello"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="96*"/>
            <RowDefinition Height="323*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="31*"/>
            <ColumnDefinition Width="761*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="SayHelloButton" Content="Say Hello" Grid.Column="1" HorizontalAlignment="Left" Margin="319,232,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1" Click="SayHelloButton_Click" Height="20"/>
        <TextBox x:Name="textBox1" Grid.Column="1" HorizontalAlignment="Left" Height="80" Margin="165,10,0,0" TextWrapping="Wrap" Text="Hello !" VerticalAlignment="Top" Width="360" Grid.Row="1" FontSize="36" TextAlignment="Center" BorderThickness="1,1,8,8"/>

    </Grid>
</Window>
